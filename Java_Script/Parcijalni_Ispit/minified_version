let h2=document.createElement("h2");h2.innerText="Potrazi seriju iz nase kolekcije",document.body.appendChild(h2);let inputContainer=document.createElement("id");inputContainer.setAttribute("id","inputContainer"),document.body.appendChild(inputContainer);let input=document.createElement("input");input.setAttribute("id","searchBar"),inputContainer.appendChild(input);let inputText=document.querySelector("#searchBar");input.addEventListener("click",()=>{""!=inputText.value&&window.location.reload()});let button=document.createElement("button");button.setAttribute("id","subButton"),button.innerText="Search",inputContainer.appendChild(button);let divLoader=document.createElement("div");function displayLoading(){divLoader.classList.add("display")}function hideLoading(){divLoader.classList.remove("display")}divLoader.setAttribute("id","loading"),document.body.appendChild(divLoader);let divContainer=document.createElement("div");divContainer.setAttribute("id","container1"),document.body.appendChild(divContainer),button.addEventListener("click",()=>{let e=inputText.value.replace(/[ ,]+/g,"+");displayLoading(),setTimeout(()=>{fetch(`https://api.tvmaze.com/search/shows?q=${e}`).then(e=>e.json()).then(e=>{hideLoading();let t=e;console.log(t),0===t.length&&(hideLoading(),alert("Birali ste seriju koja nije u nasoj bazi!")),t.forEach(e=>{let t=document.createElement("div");t.setAttribute("class","serieContainer"),t.style.backgroundImage=`url(${e.show.image.original})`,divContainer.appendChild(t);let i=document.createElement("div");i.setAttribute("class","backgroundGrey"),t.appendChild(i);let n=document.createElement("div");null!=e.show.rating.average&&(n.setAttribute("id","rating"),n.innerText=`Rating: ${e.show.rating.average}`),i.appendChild(n);let a=document.createElement("div");a.setAttribute("id","serieTitle"),a.innerText=`${e.show.name}`,i.appendChild(a);let r=document.createElement("div");r.setAttribute("id","showOf"),t.appendChild(r);let d=document.createElement("h4");d.innerHTML=`"<a class="link" href=${e.show.url}>More info on the internet...<a/>"`,r.appendChild(d);let l=document.createElement("p");l.setAttribute("id","serieParagraph"),null===e.show.summary?l.innerHTML="There is no info":null!==e.show.summary&&(l.innerHTML=`${e.show.summary}`),r.appendChild(l)})}).catch(e=>console.error(e))},1500)});
